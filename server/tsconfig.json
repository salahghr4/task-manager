{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ESNext",
    "module": "NodeNext",
    "baseUrl": "./src",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
